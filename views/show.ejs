<%- include('./partials/header')%>

<div class="ui main container segment">
  <div class="ui huge header">
    <h1><%=blog.title%></h1>
  </div>
  <div><%=blog.created.toDateString()%></div>
</div>

<div class="ui main container segment">
  <div class="blog-post content">
    <img src="<%=blog.image%>" alt="<%=blog.title%>" class="ui centered rounded image" />
    <div class="description">
        <p><%-blog.body%></p>
    </div>

    <a href="/blogs/<%=blog.id%>/edit" class="ui inverted orange button">Edit</a>
    <form action="/blogs/<%=blog.id%>?_method=DELETE" method="POST" class="ui form" id="deleteForm">
      <div class="inline field">
        <button class="ui inverted red button">Delete</button>
      </div>
    </form>
    <a href="/blogs" class="ui inverted secondary button">Go Back</a>
  </div>
</div>

<%- include('./partials/footer')%>
